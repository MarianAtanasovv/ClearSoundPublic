@{ ViewData["Title"] = "Edit Category"; }

@model EditCategoryFormModel

<section>
    <div class="container" style="padding: 120px 100px 0">
        <div class="section-title" align="center">
            <p style="color: white">Edit <span style="color: red">@Model.Name</span></p>
        </div>
        <form method="Post" enctype="multipart/form-data" style="color: white">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter the Name of the category here (example: Loudspeakers)">
            </div>
            <div class="form-group">
                <label asp-for="MinimumQuantity">Minimum Quantity</label>
                <input asp-for="MinimumQuantity" class="form-control" placeholder="Enter the Minimum Quantity for this category  (example: 2)">
                <span asp-validation-for="MinimumQuantity" class="small text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1" asp-for="IsAddable">
                <label asp-for="IsAddable" class="form-check-label" for="exampleCheck1">Can ALL Products from this Category be added to the cart? </label>
            </div>

            <input class="btn btn-success float-right" type="submit" value="Save">
        </form>
        <form method="post" asp-area="Administration" asp-controller="Products" asp-action="DeleteCategory" asp-route-id="@Model.Id" id="deleteForm">
        </form>
        <a class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</a>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="deleteModal" style="padding: 250px 0 0 0">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="font-weight: bold; color: red">Delete this category?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this Category? It will be lost forever!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" onclick="document.getElementById('deleteForm').submit()">Yes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</section>