@{
    ViewData["Title"] = "Editing images";
    var productId = Model.FirstOrDefault().ProductId;
}
@model ICollection<ClearSoundCompany.Data.Models.Products.ProductImage>

<section>

    <div class="container main-container" data-aos="fade-up">

        <div class="section-title" align="center">
            <p style="color: white">
                <span style="color: #E31E24">Editing images</span>
            </p>
            <form method="post" asp-area="Administration" asp-controller="Products" asp-action="DeleteAllImages" asp-route-id="@productId" id="deleteFormAllImages">
            </form>
            <a class="btn btn-danger" data-toggle="modal" data-target="#deleteModal2" style="margin: 10px 0 0">Delete ALL Images</a>
        </div>
        
        <div class="row" style="color: white">
            @foreach (var image in Model)
            {
                <div class="col-lg-3 col-md-4 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="25">
                    <div class="icon-box">
                        <a>
                            <img src="/database_files/Products/@image.Name" alt="" />
                        </a>
                        <p>@image.Name</p>
                        <form method="post" asp-area="Administration" asp-controller="Products" asp-action="DeleteImage" asp-route-id="@image.Id" asp-route-productId="@image.ProductId" id="deleteForm">
                        </form>
                        <a class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" style="margin: 10px 0 0">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<div class="modal" tabindex="-1" role="dialog" id="deleteModal" style="padding: 250px 0 0 0">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="font-weight: bold; color: #E31E24">Delete this image?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this Image? It will be lost forever!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="document.getElementById('deleteForm').submit()">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="deleteModal2" style="padding: 250px 0 0 0">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="font-weight: bold; color: #E31E24">Delete all images?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete all Images? They will be lost forever!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="document.getElementById('deleteFormAllImages').submit()">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>