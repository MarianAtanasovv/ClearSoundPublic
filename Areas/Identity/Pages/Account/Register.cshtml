@page
@model RegisterModel
@{ ViewData["Title"] = "Register"; }
<!--Checked-->
<section class="inner-page">
    <div class="container">
        <div class="center" , style="padding: 120px 20px 0">

            <div class="section-title">
                <p style="color: white; text-align: center; margin: 0 0 10px 0">@ViewData["Title"]</p>
                <div class="row">
                    <div class="col-lg-2 col-md-2"></div>
                    <div class="col-lg-8 col-md-8">
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="color: white">
                            <h4 style="text-align: center">Create a <span style="color: red; font-weight: bold">new account</span>.</h4>

                            <hr />
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="all-forms-buttons float-right">Register</button>
                        </form>
                        <div class="col-lg-2 col-md-2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}