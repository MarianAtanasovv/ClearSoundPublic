@page
@model LockoutModel
@{ ViewData["Title"] = "Locked out"; }
<style>
    #locked {
        width: 100%;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        font-family: "Poppins", sans-serif;
        background-image: linear-gradient(45deg, #f6d200 25%, #181617 25%, #181617 50%, #f6d200 50%, #f6d200 75%, #181617 75%, #181617 100%);
    }

    h1 {
        text-transform: uppercase;
        background: repeating-linear-gradient(45deg, #f6d200, #f6d200 10px, #181617 10px, #181617 20px);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: move 5s ease infinite;
        font-size: 30vw;
        margin: 0;
        line-height: 0.7;
        position: relative;
    }

    #paragraph {
        text-transform: uppercase;
        background: repeating-linear-gradient(45deg, #f6d200, #f6d200 5px, #181617 5px, #181617 10px);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: move 5s ease infinite;
        font-size: 5vw;
    }

    h1 span:before {
        left: 37%;
        transform: rotate(22deg);
        top: -44%;
    }

    h1 span:after {
        right: 34%;
        transform: rotate(22deg);
        top: 3%;
    }
</style>

<section class="container-fluid" id="locked">
    <h1 class="text">
        <span style="font-size: 80%">LOCKED</span>
    </h1>
    <p id="paragraph">
        <span>Try again after 10 minutes</span>
    </p>
</section>