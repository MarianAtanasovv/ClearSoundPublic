@page
@model ResetPasswordConfirmationModel
@{ ViewData["Title"] = "Reset password confirmation"; }

<section class="inner-page">
    <div class="container">
        <div class="center" style="padding: 200px 100px 100px">
            <h2 class="heading-margin text-center" style="color: white">@ViewData["Title"]</h2>
            <p class="heading-margin text-center" style="color: red">
                Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.
            </p>
        </div>
    </div>
</section>