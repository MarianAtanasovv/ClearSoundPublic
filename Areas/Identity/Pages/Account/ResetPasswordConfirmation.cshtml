@page
@model ResetPasswordConfirmationModel
@{ ViewData["Title"] = "Reset password confirmation"; }



<section class="inner-page">
    <div class="container ">
        <div class="center" style="padding: 25vh 30px 10vh">

            <div class="section-title" align="center">
                <p class="mb-3"style="color: red">@ViewData["Title"]</p>
                <p style="color: white; font-size: 15px">
                    Your password has been reset. Please <a asp-page="./Login" style="color: red">click here to log in</a>.
                </p>
            </div>
        </div>
    </div>
</section>
