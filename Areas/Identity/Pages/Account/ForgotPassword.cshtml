@page
@model ForgotPasswordModel
@{ ViewData["Title"] = "Forgot your password?"; }

<section class="inner-page">
    <div class="container">
        <div class="center" style="padding: 120px 30px 0">

            <div class="section-title" align="center">
                <p style="color: white">@ViewData["Title"]</p>
            </div>
            <div class="row">
                <div class="col-lg-2 col-md-2"></div>
                <div class="col-lg-8 col-md-8">
                    <form method="post" style="color: white">

                        <div class="form-group">
                            <label asp-for="Input.Email">Enter your email:</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="g-recaptcha" data-sitekey="6LfZvGgcAAAAAMAYi8dkN64HUEFhKPlpG_g0RygS"></div>
                        </div>
                        <button type="submit" class="all-forms-buttons float-right">Submit</button>
                    </form>
                </div>
                <div class="col-lg-2 col-md-2"></div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}